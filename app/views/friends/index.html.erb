<%= render layout: 'layout' do %>
  <% if @following.any? %>
    <%= render_friends(@following, show_actions: true) %>
  <% else %>
    <div class="empty_list">
      Make some new friends! Find an <%= link_to "author", authors_path %> that's interesting and add them to your friends list.
    </div>
  <% end %>
<% end %>
