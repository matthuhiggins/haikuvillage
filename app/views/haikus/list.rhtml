<h1>Listing haikus</h1>

<% for haiku in @haikus %>
<div class="haikuSection">
  <%= render( :partial => "haiku", :object => haiku ) %>

  <%= render(:partial => "tag", 
             :collection => haiku.db_haiku.tags,
             :locals => {:show_popularity => false}) %>
</div>
<% end %>

<br />

<%= link_to 'New haiku', :action => 'new' %>