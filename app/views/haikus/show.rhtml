<%= render :partial => "haiku" %>
<h3>Comments</h3>
<%= render :partial => "comment", :collection => @haiku.comments %>
<h4>Add a comment</h4>
<% form_for :comment, :url => { :action => "add_comment" } do |form| %>
  <%= hidden_field :haiku, :id %>
  <%= form.text_field :text %>
  <%= submit_tag "Add Comment" %>
<% end %>