<style>
.avatar {
  overflow: hidden;
}

.avatar img {
  float: left;
  margin-right: 11px;
}

.avatar .change-avatar {
  font-size: 14px;
  font-weight: bold;
  padding-bottom: 4px;
  padding-top: 10px;
}

.avatar .avatar-note {
  color: #444;
  font-style: italic;
}
</style>
<%= render :layout => 'layout' do %>
  <div class="avatar">
    <%= image_tag large_avatar_url(current_author) %>
    <div class="change-avatar">
      Change your avatar at <%= link_to "gravatar.com", "http://gravatar.com" %>
    </div>
    <div class="avatar-note">We're using <%= current_author.email %></div>
  </div>
<% end %>