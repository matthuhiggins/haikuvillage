<% render :layout => 'friends/layout' do %>
  <% if current_author %>
    <% form_tag(invite_authors_path, {:method => :post}) do %>
      <h3>Email address(es)</h3>
      <table>
        <tr><td><%= text_area_tag "email" %></td></tr>
        <tr><td><%= submit_tag "Send" %></td></tr>
      </table>
    <% end %>
  <% else %>
    <h2>You must be signed in to invite authors</h2>
  <% end %>
<% end %>