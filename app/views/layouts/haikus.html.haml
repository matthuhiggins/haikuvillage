!!! 5
%html
  %head
    %title= yield(:title)
    %link{:rel => 'icon', :href => '/images/favicon.ico'}
    %link{:rel => 'icon', :href => '/images/favicon.png', :type => 'image/png'}
    = csrf_meta_tag
    = javascript_include_tag 'jquery', 'jquery-ui', 'ujs', 'plugins/hint-input'
    = javascript_include_tag 'application', 'syllables', 'inspirations'
    = stylesheet_link_tag :haiku
    = stylesheet_link_tag 'widgets/jquery-ui-1.8.5.custom'
    = yield :head
    = yield :description
  %body
    #body
      = render 'layouts/header'
      - if flash[:notice]
        #notice= flash[:notice]
      #content-wrap
        #content
          = yield
    #footer
      = link_to 'About', about_path
      |
      = link_to 'Feedback', 'http://haikuvillage.uservoice.com'
    - if Rails.env.production?
      = render 'layouts/analytics'
    = render 'layouts/facebook'
