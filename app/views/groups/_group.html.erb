<div class="group">
  <% link_to group do %>
    <div class="logo">
      <%= image_tag(group.logo.url(:large)) %>
    </div>
  <% end %>
  <div class="meta">
    <%= link_to group.name, group, :class => 'group_name' %>
    <div class="summaries">
      <span class="summary">
        <%= group.memberships_count %>
        <%= link_to group.memberships_count == 1 ? 'member' : 'members', memberships_path(group) %>
      </span>
      |
      <span class="summary">
        <%= group.haikus_count %>
        <%= link_to group.haikus_count == 1 ? 'haiku' : 'haikus', haikus_group_path(group) %>
      </span>
      |
      <span class="summary">
        Created <%= time_ago_in_words(group.created_at) %> ago
      </span>
    </div>
    <p class="description">
      <%= h truncate(group.description, :length => 180) %>
      (<%= link_to 'more', group %>)
    </p>
  </div>
</div>