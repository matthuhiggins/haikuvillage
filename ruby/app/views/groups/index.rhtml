<% if session[:user_id] %>
  <div id="leftside">
    <% unless @user.non_admin_groups.empty? %>
      <h1>Groups you belong to:</h1>
      <%= render :partial => "shared/group", :collection => @user.non_admin_groups %>
    <% else %>
      You do not belong to any groups.
    <% end %>
  </div>
  
  <div id="rightside">
    <% unless @user.admin_groups.empty? %>
      <h1>Groups you administer:</h1>
      <%= render :partial => "shared/group", :collection => @user.admin_groups %>
    <% else %>
      You do not administer any groups.
    <% end %>
  </div>

<% else %>
  <%= render :partial => "shared/groups" %>
<% end %>