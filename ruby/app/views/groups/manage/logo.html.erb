<style>
.avatar {
  float: left;
  margin-right: 9px;
}
</style>

<% title 'Upload a group logo' %>
<h2>Upload a group logo</h2>

<% form_for :group, :url => {:action => 'update_logo'}, :html => { :multipart => true } do |form| %>
  <div class="avatar">
    <%= image_tag current_group.logo.url(:large) %>
  </div>
  <p>
    <%= form.file_field :logo %>
  </p>
  <p>
    <%= form.submit "Save" %>
  </p>
<% end %>