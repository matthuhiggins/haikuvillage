<% render :layout => "groups/layout" do %>
  <h3>Rules</h3>
  <% form_for :group, current_group, :url => current_group, :html => {:method => :put} do |f| %>
    <table>
      <tr>
        <td><%= f.check_box :invite_only %></td>
        <td><%= f.label :invite_only, 'Only invited authors can join this group', :class => 'checkbox' %>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit 'Save' %></td>
      </tr>
    </table>
  <% end %>
<% end %>