<% title 'Forget your password?' %>

<h2>Forget your password? Type in your username or email.</h2>
<% form_tag do %>
  <table>
    <tr>
      <td><%= label_tag :login, "Username or email:" %></td>
      <td><%= text_field_tag :login %></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= submit_tag "Reset my password" %>
      </td>
    </tr>
  </table>
<% end %>

<script>
$('login').focus();
</script>