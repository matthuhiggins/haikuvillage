<% title "Search for authors" %>

<% render :layout => 'index_layout' do %>
  <%= render :partial => 'search_form' %>

  <% if @authors.empty? %>
  No authors matched your search.
  <% else %>
  <ul>
    <% @authors.each do |author| %>
    <li><%= link_to_author author %></li>
    <% end %>
  </ul>
  <% end %>
<% end %>