.haiku[haiku]
  .text
    - for line in haiku.text.split("\n")
    .haiku-line= h(line)
    - end
  - if session[:user_id] != haiku.user.id
  .author= link_to h(haiku.user.username), { :controller => "users", :action => 'show', :id => haiku.user.username }
  - end
  -if session[:user_id]
  %p.add_to_favorites
    - unless current_user.favorites.include?(haiku.id)
    %button.favorites_button{:name => 'add'}
      Love it.
    - else
      Already love it.
    -end
  -end