.haiku[haiku]
  .text
    - for line in haiku.text.split("\n")
    .haiku-line= h(line)
    - end
  - if session[:user_id] != haiku.user.id
  .author= link_to h(haiku.user.alias), {:controller => "haikus", :action => "user", :id => h(haiku.user.id)}
  - end
  -if session[:user_id]
  %p.add_to_favorites
    - unless @user.favorite_haiku_ids.include?(haiku.id)
    %button.favorites_button{:name => 'add'}
      Love it.
    - else
      Already love it.
    -end
  -end