- cache("navigation_#{!current_author.nil?}") do
  #navigation
    #global-navigation
      %ul.top-menu
        %li#logo= link_to(image_tag("haikuvillage.gif"), :controller => "public", :action => "index")
      %ul.bottom-menu
        - if current_author
          %li= link_to_controller 'Create', 'my'
          %li= '/'
        %li= link_to_controller 'Explore', 'haikus'
        %li= '/'
        %li= link_to_controller 'Subjects', 'subjects'
        %li= '/'
        %li= link_to_controller 'Authors', 'authors'
    #author-navigation
      %ul.top-menu
        - unless current_author
          %li
            = link_to_function 'Sign in' do |page|
              - page[:login_form].visual_effect(:appear, :duration => 0.3)
          %li
            - form_for :author, :url => login_url, :html => {:id => 'login_form', :style => "display: none"} do |form|
              %div
                %label{:for => 'author_username'}='Twitter username:'
                = form.text_field :username
              %div
                %label{:for => 'author_password'}='Twitter password:'
                = form.password_field :password
                %button{:type => 'submit'}="Go"
        - else
          %li= link_to 'Sign out', logout_url
      %ul.bottom-menu
        %li= link_to 'About', about_url