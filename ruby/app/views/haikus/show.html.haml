- content_for :title, "A haiku by #{@single_haiku.author.username}"

%h2= "A haiku by #{@single_haiku.author.username}"

.center
  .haiku-big
    - div_for @single_haiku do
      = link_to @single_haiku, :class => 'text' do
        - @single_haiku.text.each_line do |line|
          .haiku-line= h(line)
      .haiku_detail
        = "Created on #{@single_haiku.created_at.to_s(:haiku)} by"
        = link_to_author @single_haiku.author
      .haiku_detail
        = "Favorited: #{@single_haiku.favorited_count_total}, Viewed: #{@single_haiku.view_count_total}"
      - if current_author
        .haiku_detail
          = favorite_span(@single_haiku)
          - if @single_haiku.author == current_author
            = link_to @single_haiku, :method => :delete do
              = image_tag("trash.png", :alt => "Delete")

.conversation
  - if @single_haiku.conversation.nil?
    #first_statement
      = link_to_function "Post a haiku", nil  do |page|
        - page[:first_statement].hide
        - page[:statement_form].visual_effect(:blind_down, :duration => 0.2)
      to start a conversation
      
    #statement_form{:style => 'display: none'}
      = render :partial => 'shared/create'
  - else
    %h2 This haiku is in a conversation
    = link_to_add_statement "Add a haiku to this conversation.", 'add_statement_link'
    #statement_form{:style => 'display: none'}
      = render :partial => 'shared/create'
    %br
    = render(:partial => "shared/haiku", :collection => @single_haiku.conversation.haikus.recent)
