<h2>Comments</h2>
<%= render :partial => "comment", :collection => comments %>
<% if session[:user_id] %>
  <% form_for :comment, :url => comments_url(@haiku) do |form| %>
    <%= form.text_area :text, :rows => "5", :cols => "40" %>
    <input type="submit" value="Add Comment">
  <% end %>
<% end %>