!!! XML
!!! 1.1
%html{html_attrs}
  %head
    %title= @title || yield(:title)
    %link{:rel => "icon", :href => "/images/favicon.png", :type => "image/png"}
    = javascript_include_tag 'prototype', 'effects', 'controls'
    = javascript_include_tag 'application', 'syllables', 'inspirations', :cache => 'cache'
    = stylesheet_link_tag :haiku, :cache => 'cache'
    /[if lte IE 6]
      = stylesheet_link_tag 'ie6'
    = yield :head
    = yield :description
  %body
    #body
      = render "layouts/header"
      - if flash[:notice]
        #notice= flash[:notice]
      #content
        = yield
    #footer
      = link_to "About HaikuVillage", about_path
    - if Rails.env.production?
      = render "layouts/analytics"