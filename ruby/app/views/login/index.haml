#login-border-top
#login.centered
  %p= flash[:notice]
  %fieldset
    %legend Sign in to Haiku Village

    - form_tag do
    %label{ :for => "username" }
      = text_field_tag :username, params[:username]
      Username:
    %label{ :for => "password" }
      = password_field_tag :password, params[:password]
      Password:
    = submit_tag "Login", {:id => "login_button"}
    - end
    %script YAHOO.util.Dom.get('username').focus();

  %p 
    Not registered?
    = link_to("Sign up", register_url)
#login-border-bottom