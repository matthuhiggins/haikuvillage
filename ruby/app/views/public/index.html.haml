- content_for :title, 'Welcome to HaikuVillage'

.column.wide
  = render :partial => current_author ? 'intro_active_author' : 'intro_new_author'
  #haiku-summary
    .summary-line
      %span.count_value= number_with_delimiter @total_authors
      %span.count_text
        = link_to 'authors', :controller => 'authors'
        ='have written'
    .summary-line
      %span.count_value= number_with_delimiter @total_haikus
      %span.count_text
        =link_to 'haikus', :controller => 'haikus'
        ='about'
    .summary-line
      %span.count_value= number_with_delimiter @total_subjects
      %span.count_text= link_to 'subjects', :controller => 'subjects'
      
  - if current_author
    .cloud
      %h2= 'Popular subjects'
      = subject_cloud(@popular_subjects)
.column.small{:style => 'margin-top: 100px'}
  #preview{:class => 'empty'}
    %div= "five syllables"
    %div= "seven syllables"
    %div= "five syllables"
  %h2#write= 'Write a haiku'
  - form_for :haiku, :url => haikus_url, :html => {:id => 'create_haiku_form'} do |haiku|
    = haiku.text_area(:text, :rows => 3)
    #create-submit
      = haiku.submit 'Create', :id => "create_haiku", :disabled => true
%script
  new Haiku.PeriodicalUpdater("haiku_text", "preview", "create_haiku");
  $('haiku_text').focus();
  
